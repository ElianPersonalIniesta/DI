<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VistasyEso.MainPage"
             >

    <ScrollView 
        >
        
        <VerticalStackLayout
            Padding="30,0"
            Spacing="20">
            <Image
                Source="logo_empresa.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="Es el logo de la aplicacion" />

            <Label
                Text="Inicie Sesion"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />
            <Entry
                x:Name="txtUsuario"
                Placeholder="Introduzca su usuario"
                BackgroundColor="WhiteSmoke"
                HorizontalOptions="Fill" TextColor="#000000"
                />
            <Entry
                x:Name="txtPwd"
                Placeholder="Introduzca su contraseña"
                BackgroundColor="WhiteSmoke"
                HorizontalOptions="Fill"
                IsPassword="True" TextColor="#000000"
                />
            <Button
                x:Name="signInbtn"
                Text="Iniciar Sesion" 
                SemanticProperties.Hint="Boton para iniciar sesión"
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill" 
                />
            <Button
                x:Name="registerBtn"
                Text="Registrarse"
                SemanticProperties.Hint="Boton para registrarse"
                Clicked="registerBtn_Clicked"
                HorizontalOptions="Fill"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
